<div class="row">
  <h1>Edit a Topic</h1>
    <div class="row">
      <div class="form-group">
        <%= form_for @topic do |f| %>
      </div>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.submit "Save" %>
      </div>
      <% end %>
    </div>
</div>
